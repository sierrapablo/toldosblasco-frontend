<main class="flex-grow flex flex-col items-center justify-center px-4 py-5">
  <h1 class="text-4xl font-bold text-slate-900 mb-8 text-center">
    Estaremos encantados de atenderte
  </h1>

  <form
    action="contacto"
    method="post"
    class="w-full max-w-md bg-white p-6 rounded-2xl shadow-lg space-y-4"
  >
    <div>
      <label for="company" class="block text-sm font-medium text-slate-800">
        Empresa (opcional)
      </label>
      <input
        type="text"
        id="company"
        name="company"
        placeholder="Nombre de tu empresa"
        class="mt-1 w-full rounded-xl border border-slate-300 px-3 py-2 text-slate-900 placeholder-slate-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="name" class="block text-sm font-medium text-slate-800">
        Nombre y apellidos
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder="Tu nombre"
        class="mt-1 w-full rounded-xl border border-slate-300 px-3 py-2 text-slate-900 placeholder-slate-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-slate-800">
        Correo electr√≥nico
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="correo@ejemplo.es"
        class="mt-1 w-full rounded-xl border border-slate-300 px-3 py-2 text-slate-900 placeholder-slate-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-slate-800"> Mensaje </label>
      <textarea
        id="message"
        name="message"
        rows="5"
        required
        placeholder="Escribe tu mensaje"
        class="mt-1 w-full rounded-xl border border-slate-300 px-3 py-2 text-slate-900 placeholder-slate-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
      ></textarea>
    </div>

    <div class="flex space-x-2">
      <button
        type="submit"
        class="w-3/4 bg-orange-400 hover:bg-orange-600 text-white font-medium py-2.5 rounded-xl transition"
      >
        Enviar
      </button>

      <a
        aria-label="WhatsApp"
        href="https://wa.me/34600500400"
        target="_blank"
        rel="noopener noreferrer"
        class="w-1/4 flex items-center justify-center bg-green-500 hover:bg-green-600 text-white rounded-xl transition"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 h-6 fill-current">
          <path
            d="M20.52 3.48A11.78 11.78 0 0 0 12 0a11.95 11.95 0 0 0-10.26 17.94L0 24l6.21-1.62A11.94 11.94 0 0 0 12 24h.01A12 12 0 0 0 24 12a11.77 11.77 0 0 0-3.48-8.52ZM12 21.82a9.86 9.86 0 0 1-5-1.35l-.36-.21-3.69.96.99-3.6-.24-.37a9.85 9.85 0 1 1 8.3 4.57Zm5.43-7.39c-.3-.15-1.77-.87-2.04-.97-.27-.1-.47-.15-.67.15-.2.3-.77.97-.94 1.17-.17.2-.35.22-.65.07-.3-.15-1.26-.46-2.4-1.47a8.82 8.82 0 0 1-1.63-2.02c-.17-.3-.02-.46.13-.61.13-.13.3-.35.45-.52.15-.17.2-.3.3-.5.1-.2.05-.37-.02-.52-.07-.15-.67-1.62-.92-2.21-.24-.57-.48-.5-.67-.51h-.57c-.2 0-.52.07-.8.37-.27.3-1.05 1.03-1.05 2.5 0 1.47 1.08 2.9 1.23 3.1.15.2 2.12 3.23 5.13 4.53.72.31 1.28.5 1.72.64.72.23 1.38.2 1.9.12.58-.09 1.77-.72 2.02-1.42.25-.7.25-1.3.17-1.42-.07-.12-.27-.2-.57-.35Z"
