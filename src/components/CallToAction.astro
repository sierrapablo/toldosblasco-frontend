---
import fondo from '../assets/img/calltoaction/CallToAction.jpeg';
import { Image } from 'astro:assets';
---

<section class="relative w-full h-[20rem] lg:h-[20rem] overflow-hidden">
  <Image src={fondo} alt="Call to Action" class="absolute inset-0 w-full h-full object-cover" />

  <div class="absolute inset-0 bg-gray-900/40"></div>

  <div class="relative flex items-center justify-center w-full h-full">
    <div class="text-center">
      <h1 class="text-4xl font-semibold text-white lg:text-5xl">
        Estaremos encantados de atenderte...
      </h1>

      <a
        href="/contacto"
        class="inline-block rounded-full px-24 py-3 mt-6 text-lg font-medium text-white capitalize duration-300 transform bg-orange-400 hover:bg-orange-600 hover:scale-105 transition-all focus:outline-none focus:bg-orange-600"
      >
        Contacto
      </a>
    </div>
  </div>
</section>
