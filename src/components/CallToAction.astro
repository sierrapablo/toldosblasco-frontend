---
import fondo from '../assets/img/calltoaction/CallToAction.jpeg';
import { getImage } from 'astro:assets';

const { src } = await getImage({ src: fondo });
---

<section class="w-full bg-center bg-cover h-[20rem] lg:h-[20rem]" style={`background-image: url('${src}');`}>
  <div class="flex items-center justify-center w-full h-full bg-gray-900/40">
    <div class="text-center">
      <h1 class="text-4xl font-semibold text-white lg:text-5xl">
        Estaremos encantados de atenderte...
      </h1>

      <a
        href="/contacto"
        class="inline-block px-6 py-3 mt-6 text-lg font-medium text-white capitalize transition-colors duration-300 transform bg-orange-400 rounded-md hover:bg-orange-600 focus:outline-none focus:bg-orange-600"
      >
        Contacto
      </a>
    </div>
  </div>
</section>
