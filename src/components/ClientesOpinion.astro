---
import { testimonials } from '../data/testimonios';
import type { Testimonial } from '../types/testimonios';

const id = 'testimonials-carousel';
---

<section
  id={id}
  tabindex="0"
  aria-label="Carrusel de testimonios"
  class="relative w-full bg-white text-gray-800 py-8 sm:py-10"
>
  <div class="mx-auto max-w-5xl px-4 sm:px-6">
    <header class="mb-4 sm:mb-6 text-center">
      <h2 class="text-xl sm:text-3xl font-bold tracking-tight text-gray-900">
        Lo que dicen nuestros clientes
      </h2>
      <p class="text-xs sm:text-base text-gray-500 mt-1 sm:mt-2">
        Opiniones reales, resultados reales
      </p>
    </header>

    <div
      class="relative overflow-hidden rounded-lg sm:rounded-2xl border border-gray-200 bg-gray-50 shadow-lg"
    >
      <ul class="track flex transition-transform duration-500 ease-out will-change-transform">
        {
          testimonials.map((t: Testimonial, i) => (
            <li
              class="slide min-w-full p-4 sm:p-10 grid gap-4 sm:gap-8 place-items-center"
              data-index={i}
            >
              <figure class="max-w-3xl text-center">
                {t.avatar && (
                  <img
                    src={t.avatar}
                    alt={`Foto de ${t.name}`}
                    class="mx-auto h-14 w-14 sm:h-20 sm:w-20 rounded-full ring-2 ring-orange-300 object-cover"
                    loading="lazy"
                    decoding="async"
                  />
                )}
                <blockquote class="mt-3 sm:mt-5 text-base sm:text-xl leading-relaxed text-gray-700">
                  “{t.quote}”
                </blockquote>
                <figcaption class="mt-3 sm:mt-4">
                  <div class="font-semibold text-gray-900 text-sm sm:text-base">{t.name}</div>
                  <div class="text-xs sm:text-sm text-gray-500">
                    {t.role}
                    {t.company ? ` · ${t.company}` : ''}
                  </div>
                  {t.rating && (
                    <div
                      class="mt-1 sm:mt-2 flex items-center justify-center gap-0.5 sm:gap-1"
                      aria-label={`Valoración: ${t.rating} de 5`}
                    >
                      {Array.from({ length: 5 }).map((_, s) => (
                        <svg
                          viewBox="0 0 20 20"
                          class={`h-4 w-4 sm:h-5 sm:w-5 ${s < (t.rating ?? 0) ? 'fill-orange-400' : 'fill-gray-300'}`}
                          aria-hidden="true"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.802 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.802-2.034a1 1 0 00-1.176 0l-2.802 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                  )}
                </figcaption>
              </figure>
            </li>
          ))
        }
      </ul>

      <button
        class="prev hidden sm:flex absolute left-2 top-1/2 -translate-y-1/2 rounded-full p-2 bg-orange-500/90 hover:bg-orange-500 text-white focus:outline-none focus:ring-2 focus:ring-orange-300"
        aria-label="Anterior"
      >
        <svg viewBox="0 0 20 20" class="h-5 w-5 fill-white">
          <path
            d="M12.707 15.707a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 111.414 1.414L8.414 10l4.293 4.293a1 1 0 010 1.414z"
          ></path>
        </svg>
      </button>

      <button
        class="next hidden sm:flex absolute right-2 top-1/2 -translate-y-1/2 rounded-full p-2 bg-orange-500/90 hover:bg-orange-500 text-white focus:outline-none focus:ring-2 focus:ring-orange-300"
        aria-label="Siguiente"
      >
        <svg viewBox="0 0 20 20" class="h-5 w-5 fill-white rotate-180">
          <path
            d="M12.707 15.707a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 111.414 1.414L8.414 10l4.293 4.293a1 1 0 010 1.414z"
          ></path>
        </svg>
      </button>

      <div
        class="dots absolute bottom-2 sm:bottom-3 left-1/2 -translate-x-1/2 flex gap-1.5 sm:gap-2"
      >
        {
          testimonials.map((_, i) => (
            <button
              class="dot h-2 w-2 sm:h-2.5 sm:w-2.5 rounded-full bg-gray-300 transition-all aria-[current=true]:w-4 sm:aria-[current=true]:w-6 aria-[current=true]:rounded-full aria-[current=true]:bg-orange-400"
              aria-label={`Ir al slide ${i + 1}`}
              data-to={i}
            />
          ))
        }
      </div>
    </div>
  </div>

  <script src="../scripts/carrusel.js"></script>
</section>
