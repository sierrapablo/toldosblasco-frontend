---
import { galerias } from '../data/galeria';

const url = new URL(Astro.request.url);
const itemsPerPage = 9;
const currentPage = parseInt(url.searchParams.get('page') ?? '1', 10);

const totalPages = Math.ceil(galerias.length / itemsPerPage);
const startIndex = (currentPage - 1) * itemsPerPage;
const endIndex = startIndex + itemsPerPage;
const currentGalerias = galerias.slice(startIndex, endIndex);
---

<section class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold mb-2">Galerías</h2>
  <p class="text-gray-500 mb-6">Explora nuestros trabajos anteriores</p>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      currentGalerias.map((galeria) => (
        <div class="bg-white rounded-2xl shadow-md overflow-hidden transform transition hover:scale-105 hover:shadow-xl">
          <div
            class="overflow-hidden h-48 cursor-pointer"
            onclick={`window.openLightbox && window.openLightbox(${JSON.stringify(galeria.imagenes[0])})`}
          >
            <img
              src={galeria.imagenes[0]}
              alt={galeria.titulo}
              class="w-full h-full object-cover rounded-t-2xl transition-transform duration-300"
            />
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-lg truncate">{galeria.titulo}</h3>
            {galeria.descripcion && (
              <p class="text-gray-600 text-sm line-clamp-2 mt-1">{galeria.descripcion}</p>
            )}
            {galeria.etiquetas && (
              <div class="mt-2 flex flex-wrap gap-2">
                {galeria.etiquetas.map((etiqueta) => (
                  <span class="bg-blue-100 text-blue-800 text-xs px-2 py-0.5 rounded-full">
                    {etiqueta}
                  </span>
                ))}
              </div>
            )}
            <p class="text-xs text-gray-500 mt-2">
              Creado: {new Date(galeria.fechaCreacion).toLocaleDateString('es-ES')}
            </p>
          </div>
        </div>
      ))
    }
  </div>

  <div
    id="pagination"
    class="flex justify-center items-center mt-8 space-x-2"
    data-total={totalPages}
    data-current={currentPage}
  >
  </div>
</section>

<div
  id="lightbox"
  class="fixed inset-0 hidden z-50 bg-black/95 p-2 md:p-6 items-center justify-center"
  aria-modal="true"
  role="dialog"
>
  <button
    id="close-lightbox"
    type="button"
    class="absolute top-5 right-5 md:top-6 md:right-6 w-12 h-12 rounded-full bg-black/60 text-white hover:bg-black/70 focus:outline-none focus:ring-2 focus:ring-white/70 grid place-items-center"
  >
    <span aria-hidden="true" class="text-2xl leading-none">✕</span>
    <span class="sr-only">Cerrar</span>
  </button>

  <img
    id="lightbox-img"
    class="block mx-auto max-h-[98vh] max-w-[98vw] md:max-h-[95vh] md:max-w-[95vw] rounded-2xl shadow-2xl object-contain transition-transform duration-300 ease-in-out cursor-zoom-in"
  />
</div>

<script src="../scripts/galeria.js"></script>
<script src="../scripts/paginacion.js"></script>
