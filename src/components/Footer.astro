---
import { Image } from 'astro:assets';
import logo from '../assets/img/logo.png';
---

<footer class="border-t py-6 border-[#ffa726]">
  <div
    class="grid grid-cols-1 md:grid-cols-[auto,1fr] gap-8 items-start max-w-[1100px] mx-auto px-8"
  >
    <div class="flex flex-col items-center md:items-start space-y-4">
      <Image src={logo} alt="logo" class="w-12 h-12" loading="lazy" />

      <div class="flex items-center space-x-4">
        <a
          aria-label="Instagram"
          href="https://www.instagram.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="w-8 h-8 text-black hover:text-orange-400 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <rect
              x="2"
              y="2"
              width="20"
              height="20"
              rx="5"
              ry="5"
              stroke="currentColor"
              stroke-width="2.5"
              fill="none"></rect>
            <circle cx="12" cy="12" r="5" stroke="currentColor" stroke-width="2.5" fill="none"
            ></circle>
            <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"></circle>
          </svg>
        </a>

        <a
          aria-label="LinkedIn"
          href="https://www.linkedin.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="w-7 h-7 text-black hover:text-orange-400 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.226.792 24 1.771 24h20.451C23.2 24 24 23.226 24 22.271V1.729C24 .774 23.2 0 22.225 0zM7.082 20.452H3.542V9h3.54v11.452zM5.312 7.509c-1.132 0-2.05-.923-2.05-2.062 0-1.14.918-2.063 2.05-2.063 1.132 0 2.05.923 2.05 2.063 0 1.139-.918 2.062-2.05 2.062zM20.452 20.452h-3.539v-5.605c0-1.335-.026-3.056-1.862-3.056-1.863 0-2.148 1.455-2.148 2.956v5.705h-3.539V9h3.396v1.561h.048c.474-.899 1.632-1.848 3.362-1.848 3.593 0 4.254 2.364 4.254 5.438v6.301z"
            ></path>
          </svg>
        </a>

        <a
          aria-label="X"
          href="https://x.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="w-7 h-7 text-black hover:text-orange-400 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 1227" fill="currentColor">
            <path
              d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z"
            ></path>
          </svg>
        </a>

        <a
          aria-label="YouTube"
          href="https://www.youtube.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="w-7 h-7 text-black hover:text-orange-400 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M23.498 6.186a2.986 2.986 0 0 0-2.105-2.106C19.57 3.667 12 3.667 12 3.667s-7.57 0-9.393.413a2.986 2.986 0 0 0-2.105 2.106A31.124 31.124 0 0 0 0 12a31.124 31.124 0 0 0 .502 5.814 2.986 2.986 0 0 0 2.105 2.106c1.823.413 9.393.413 9.393.413s7.57 0 9.393-.413a2.986 2.986 0 0 0 2.105-2.106A31.124 31.124 0 0 0 24 12a31.124 31.124 0 0 0-.502-5.814zM9.546 15.568V8.432l6.364 3.568-6.364 3.568z"
            ></path>
          </svg>
        </a>

        <a
          aria-label="WhatsApp"
          href="https://wa.me/34600500400"
          target="_blank"
          rel="noopener noreferrer"
          class="w-8 h-8 text-black hover:text-green-500 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M20.52 3.48A11.78 11.78 0 0 0 12 0a11.95 11.95 0 0 0-10.26 17.94L0 24l6.21-1.62A11.94 11.94 0 0 0 12 24h.01A12 12 0 0 0 24 12a11.77 11.77 0 0 0-3.48-8.52ZM12 21.82a9.86 9.86 0 0 1-5-1.35l-.36-.21-3.69.96.99-3.6-.24-.37a9.85 9.85 0 1 1 8.3 4.57Zm5.43-7.39c-.3-.15-1.77-.87-2.04-.97-.27-.1-.47-.15-.67.15-.2.3-.77.97-.94 1.17-.17.2-.35.22-.65.07-.3-.15-1.26-.46-2.4-1.47a8.82 8.82 0 0 1-1.63-2.02c-.17-.3-.02-.46.13-.61.13-.13.3-.35.45-.52.15-.17.2-.3.3-.5.1-.2.05-.37-.02-.52-.07-.15-.67-1.62-.92-2.21-.24-.57-.48-.5-.67-.51h-.57c-.2 0-.52.07-.8.37-.27.3-1.05 1.03-1.05 2.5 0 1.47 1.08 2.9 1.23 3.1.15.2 2.12 3.23 5.13 4.53.72.31 1.28.5 1.72.64.72.23 1.38.2 1.9.12.58-.09 1.77-.72 2.02-1.42.25-.7.25-1.3.17-1.42-.07-.12-.27-.2-.57-.35Z"
